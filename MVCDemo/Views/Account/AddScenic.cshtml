@model MVCDemo.Models.ScenicInfo
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@section TitleSection{
    AddScenic
}
@section HeaderSection{
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
}
@section ContentBody{
    <div class="body-content container">
        <h2>添加</h2>
        @using (Html.BeginForm("AddScenic", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <label for="ScenicName" class="col-sm-2 control-label">景点名称：</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.ScenicName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="ScenicCountry" class="col-sm-2 control-label">所属国家：</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.ScenicCountry, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="ScenicCity" class="col-sm-2 control-label">所在城市：</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.ScenicCity, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="ScenicAddress" class="col-sm-2 control-label">地理位置：</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.ScenicAddress, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="ScenicLevel" class="col-sm-2 control-label">景点级别：</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.ScenicLevel, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="ScenicType" class="col-sm-2 control-label">景点类型：</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.ScenicType, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="ScenicIntro" class="col-sm-2 control-label">景点介绍：</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.ScenicIntro, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">添加</button>
                    @Html.ActionLink("返回首页", "IndexScenic")
                </div>
            </div>
        } 
    </div>
}